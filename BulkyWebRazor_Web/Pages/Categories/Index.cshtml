
@page
@using BulkyWebRazor_Web.Models

@model BulkyWebRazor_Web.Pages.Categories.IndexModel
@{
}



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/create" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Create new Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <td>Id</td>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (Category category in Model.CategoryList.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-page="/categories/delete"  asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

