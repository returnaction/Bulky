@model List<Category>

@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Create new Category</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>

        <tr>
            <td>Id</td>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Category category in Model.OrderBy(c=>c.DisplayOrder))
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>
        }
    </tbody>

</table>
</div>