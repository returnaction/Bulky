@using Bulky.Models.Models
@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Edit">
            <input asp-for="Id" hidden />
            <div class="border-p3 mt-4">
                <div class="mb-3 row">
                    <label>Title</label>
                    <input asp-for="Title" type="text" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label>Description</label>
                    <textarea asp-for="Description" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label>ISBN</label>
                    <input asp-for="ISBN" type="text" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label>Author</label>
                    <input asp-for="Author" type="text" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label>Price</label>
                    <input asp-for="Price" type="number" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label>ListPrice</label>
                    <input asp-for="ListPrice" type="number" class="form-control" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label>Price50</label>
                    <input asp-for="Price50" type="number" class="form-control" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <label>Price100</label>
                    <input asp-for="Price100" type="number" class="form-control" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>




                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">BACK TO LIST</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}